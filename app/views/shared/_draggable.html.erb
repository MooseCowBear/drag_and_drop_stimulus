<% drag_actions = "dragstart->drag-and-drop#dragStart 
                    dragover->drag-and-drop#dragOver 
                    dragenter->drag-and-drop#dragEnter
                    drop->drag-and-drop#drop
                    dragend->drag-and-drop#dragEnd" %>

<%= content_tag(:div, draggable: true, data: {
    controller: "drag-and-drop",
    action: drag_actions,
    resource_id: element.id,
    position: element.position
}) do %>
  <%= render element_partial, partial_element(element) => element %>
<% end %>