<div class="md:w-4/6 flex flex-col gap-5">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl uppercase tracking-wider">Tasks</h1>
    <%= link_to "new task", new_task_path, class: "cursor-pointer" %>
  </div>
  <div id="tasks" class="flex flex-col gap-5">
    <% @tasks.each do |task| %>
      <%= render "shared/draggable", element: task, parent: "tasks", element_partial: "tasks/task" %>
    <% end %>
  </div>
</div>