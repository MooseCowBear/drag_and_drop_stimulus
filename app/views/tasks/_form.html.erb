<%= form_with(model: task, id: "#{dom_id(task)}_form", class: "bg-slate-50 w-full flex flex-col justiify-stretch gap-2") do |form| %>
  <div class= "field flex flex-col justify-stretch">
    <p class="flex justify-between">
      <%= form.label :title, "title", class: "font-bold" %>
      <span class="text-pink-500 lowercase">
        <% form.object.errors.full_messages_for(:title).each do |msg| %>
          <%= msg %>
        <% end %>
      </spen>
    </p>
    <%= form.text_field :title, class: "rounded border border-slate-400" %>
  </div>

  <div class="flex flex-col">
    <%= form.label :description, "description", class: "font-bold" %>
    <%= form.text_area :description, class: "rounded border border-slate-400" %>
  </div>
  
  <div class="flex flex-col">
    <%= form.label :category, "category", class: "font-bold" %>
    <%= select_tag :category, options_for_select(Task.categories.map {|k, v| [k.humanize, v]}), include_blank: true, class: "rounded border border-slate-400" %>
  </div>

  <div class="flex flex-col">
    <%= form.label :priority, "priority", class: "font-bold" %>
    <%= select_tag :priority, options_for_select(Task.priorities.map {|k, v| [k.humanize, v]}), include_blank: true, class: "rounded border border-slate-400" %>
  </div>
  <%= form.submit class: "bg-slate-900 text-white rounded w-full py-2 hover:cursor-pointer lowercase hover:bg-cyan-400" %>
<% end %>